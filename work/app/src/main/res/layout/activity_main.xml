<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6b48a3">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:text="BMI"
        android:textColor="#ededed"
        android:textSize="35sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/TextView"
        android:text="calculator"
        android:textColor="#ededed"
        android:textSize="20sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/square"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="0dp"
        android:background="#6f54e8"
        android:clipChildren="false"
        android:padding="35dp">
    </FrameLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/square"
        android:layout_alignTop="@+id/square"
        android:layout_marginStart="82dp"
        android:layout_marginTop="13dp"
        android:text="Male"
        android:textColor="#ededed"
        android:textSize="30dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_alignStart="@+id/square"
        android:layout_marginStart="82dp"
        android:text="Female"
        android:textColor="#ededed"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="35dp"
        android:layout_marginTop="115dp"
        android:text="Gender"
        android:textColor="#ededed"
        android:textSize="35sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/square2"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_below="@+id/square"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:background="#bf4ba4">
    </FrameLayout>

    <ImageButton
        android:id="@+id/MinesAge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="263dp"
        android:layout_marginStart="170dp"
        app:srcCompat="@android:drawable/ic_delete"
        android:backgroundTint="#00990055"
        android:onClick="onClickMinesAge"/>

    <ImageButton
        android:id="@+id/PlusAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="263dp"
        android:layout_toEndOf="@+id/TextViewAge1"
        android:backgroundTint="#00990055"
        android:onClick="onClickPlusAge"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/TextViewAge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="235dp"
        android:layout_marginTop="265dp"
        android:text="0"
        android:textColor="#ededed"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView1"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="50dp"
        android:layout_marginTop="98dp"
        android:text="Age"
        android:textColor="#ededed"
        android:textSize="35sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/square3"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_below="@+id/square2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:background="#eb8346">
    </FrameLayout>

    <ImageButton
        android:id="@+id/imageButtonKrest1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="410dp"
        android:layout_marginStart="170dp"
        app:srcCompat="@android:drawable/ic_delete"
        android:backgroundTint="#00990055"
        android:onClick="onClickMinesWeight"/>

    <ImageButton
        android:id="@+id/imageButtonGalochka1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="410dp"
        android:layout_toEndOf="@+id/TextViewWeight"
        android:backgroundTint="#00990055"
        android:onClick="onClickPlusWeight"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/TextViewWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="235dp"
        android:layout_marginTop="410dp"
        android:text="0"
        android:textColor="#ededed"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView2"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginTop="98dp"
        android:text="Weight"
        android:textColor="#ededed"
        android:textSize="35sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/square4"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_below="@+id/square3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="-1dp"
        android:background="#d9b657"></FrameLayout>

    <ImageButton
        android:id="@+id/imageButtonKrest2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="560dp"
        android:backgroundTint="#00990055"
        android:onClick="onClickMinesHeight"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/imageButtonGalochka2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="560dp"
        android:layout_toEndOf="@+id/TextViewHeight"
        android:backgroundTint="#00990055"
        android:onClick="onClickPlusHeight"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/TextViewHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="235dp"
        android:layout_marginTop="560dp"
        android:text="0"
        android:textColor="#ededed"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView3"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginTop="98dp"
        android:text="Height"
        android:textColor="#ededed"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_below="@+id/square4"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#e3a042"
        android:text="Continue"
        android:textSize="25dp"/>




</RelativeLayout>